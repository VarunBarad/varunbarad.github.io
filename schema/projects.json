{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Projects",
  "description": "All project's data",
  "type": "object",
  "properties": {
    "projectDetail": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "clients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "uri-reference"
                }
              }
            }
          },
          "technologies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "image": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "format": "uri-reference"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "path"
            ]
          },
          "sourceLink": {
            "type": "string"
          },
          "projectLink": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "description",
          "date",
          "clients",
          "technologies"
        ]
      }
    }
  }
}
