---
layout: page.liquid
title: Books
permalink: "/books.html"
redirect_from: [
  "/books/index.html",
]
---
<div class="books-listing">
  {% if books.currentlyReading.size > 0 %}
    <div class="year-section">
      <p class="year-heading">Currently reading ({{ books.currentlyReading.size }})</p>

      <div class="book-list">
        {% for book in books.currentlyReading %}
          <article class="book-item">
            {% if book.link %}
              <a href="{{ book.link }}" class="book-item-title">{{ book.title }}</a>
            {% else %}
              <div class="book-item-title">{{ book.title }}</div>
            {% endif %}

            <p class="book-item-author">{{ book.author }}</p>

            {% if book.startDate or book.finishDate %}
              <p class="book-item-dates">
                {% if book.startDate %}Started: {{ book.startDate | date: "%Y-%m-%d" }}{% endif %}
                {% if book.startDate and book.finishDate %} | {% endif %}
                {% if book.finishDate %}Finished: {{ book.finishDate | date: "%Y-%m-%d" }}{% endif %}
              </p>
            {% endif %}
          </article>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {% for year in (1995..2099) reversed %}
    {% assign yearKey = year | append: "" %}
    {% assign yearBooks = books[yearKey] %}
    {% if yearBooks.size > 0 %}
      <div class="year-section">
        <p class="year-heading">{{ yearKey }} ({{ yearBooks.size }})</p>

        <div class="book-list">
          {% for book in yearBooks %}
            <article class="book-item">
              {% if book.link %}
                <a href="{{ book.link }}" class="book-item-title">{{ book.title }}</a>
              {% else %}
                <div class="book-item-title">{{ book.title }}</div>
              {% endif %}

              <p class="book-item-author">{{ book.author }}</p>

              {% if book.startDate or book.finishDate %}
                <p class="book-item-dates">
                  {% if book.startDate %}Started: {{ book.startDate | date: "%Y-%m-%d" }}{% endif %}
                  {% if book.startDate and book.finishDate %} | {% endif %}
                  {% if book.finishDate %}Finished: {{ book.finishDate | date: "%Y-%m-%d" }}{% endif %}
                </p>
              {% endif %}
            </article>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% endfor %}

  {% if books.beforeTracking.size > 0 %}
    <div class="year-section">
      <p class="year-heading">Before I started tracking ({{ books.beforeTracking.size }})</p>

      <div class="book-list">
        {% for book in books.beforeTracking %}
          <article class="book-item">
            {% if book.link %}
              <a href="{{ book.link }}" class="book-item-title">{{ book.title }}</a>
            {% else %}
              <div class="book-item-title">{{ book.title }}</div>
            {% endif %}

            <p class="book-item-author">{{ book.author }}</p>

            {% if book.startDate or book.finishDate %}
              <p class="book-item-dates">
                {% if book.startDate %}Started: {{ book.startDate | date: "%Y-%m-%d" }}{% endif %}
                {% if book.startDate and book.finishDate %} | {% endif %}
                {% if book.finishDate %}Finished: {{ book.finishDate | date: "%Y-%m-%d" }}{% endif %}
              </p>
            {% endif %}
          </article>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>
