---
layout: page.liquid
pagination:
  data: collections.blogPostCategories
  size: 1
  alias: category
permalink: "/category/{{ category.name }}.html"
eleventyComputed:
  title: "Blog (#{{ category.name }})"
---
<div class="category-tags">
    {% for blogPostCategory in collections.blogPostCategories %}
        {% if blogPostCategory.name == category.name %}
            <span class="category-tag category-tag-active">#{{ blogPostCategory.name }}</span>
        {% else %}
            <a href="/category/{{ blogPostCategory.name }}" class="category-tag">#{{ blogPostCategory.name }}</a>
        {% endif %}
    {% endfor %}
    <a href="/blog.html" class="category-tag">#all</a>
</div>

{% assign postsByYear = category.posts | reverse | group_by_exp: "post", "post.date | date: '%Y'" %}
<div class="blog-listing">
    {% for year in postsByYear %}
        <div class="year-section">
            <h2 class="year-heading">{{ year.name }} ({{ year.items | size }})</h2>

            <div class="post-list">
                {% for post in year.items %}
                    <article class="post-item">
                        <a href="{{ post.url }}" class="post-item-title">{{ post.data.title }}</a>
                        <p class="post-item-summary">{{ post.data.summary }}</p>
                    </article>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>
